<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDefault</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDefaultDark</item>
        <item name="colorAccent">@color/colorPrimaryDefaultDark</item>
        <item name="colorAppBackground">@color/colorAppBackground</item>
        <item name="colorTitle">@color/colorTitle</item>
        <item name="colorSubTitle">@color/colorTitle</item>
        <item name="colorCardBackground">@color/colorCardBackground</item>
        <item name="colorWhite">@color/colorWhite</item>
        <item name="colorLightGray">@color/colorLightGray</item>
        <item name="colorVeryLightGray">@color/colorVeryLightGray</item>
        <item name="colorHeader">@color/colorHeader</item>
        <item name="colorPosterBackground">@color/colorPosterBackground</item>
        <item name="colorMovieSelected">@color/colorPrimaryDefaultDark</item>

        <item name="android:windowBackground">?attr/colorAppBackground</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

<!--    Dark theme-->

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <item name="colorAppBackground">@color/colorAppBackgroundDark</item>
        <item name="colorTitle">@color/colorTitleDark</item>
        <item name="colorSubTitle">@color/colorTitleDark</item>
        <item name="colorCardBackground">@color/colorCardBackgroundDark</item>
        <item name="colorWhite">@color/colorTitleDark</item>
        <item name="colorLightGray">@color/colorLightGray</item>
        <item name="colorVeryLightGray">@color/colorVeryLightGray</item>
        <item name="colorHeader">@color/colorHeaderDark</item>
        <item name="colorPosterBackground">@color/colorPosterBackground</item>
        <item name="colorMovieSelected">@color/colorTitleDark</item>

        <item name="android:windowBackground">?attr/colorAppBackground</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>