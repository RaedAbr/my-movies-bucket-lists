<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/movie_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorRecyclerHeader"
            app:queryHint="@string/type_movie_title"
            app:iconifiedByDefault="false"
            style="style=TextAppearance.AppCompat.Caption"
            android:inputType="textAutoComplete"/>

        <TextView
            android:id="@+id/movie_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorRecyclerHeader"
            android:textColor="@color/white"
            android:padding="@dimen/nav_header_vertical_spacing"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/top_rated_movies_from_themoviedb_org"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_gravity="start"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="4"
            tools:listitem="@layout/item_list_movie"
            android:clipToPadding="false"
            android:paddingBottom="10dp"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/main_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</FrameLayout>