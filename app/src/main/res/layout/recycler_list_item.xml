<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/List.Item">

    <TextView
        android:id="@+id/list_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_name"
        style="@style/List.Name"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/created_by"
            android:layout_marginEnd="5dp"
            style="@style/List.CreatedBy" />
        <TextView
            android:id="@+id/list_creator_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/creator"
            style="@style/List.CreatedBy"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/list_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/november_18_2019"
            style="@style/List.DateTime"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_calendar"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/list_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_04_30pm"
            style="@style/List.DateTime"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_time" />
    </LinearLayout>
</LinearLayout>
